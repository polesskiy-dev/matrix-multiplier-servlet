<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>

    <!--servlet>
        <servlet-name>matrixServlet</servlet-name>
        <servlet-class>servlets.MatrixServlet</servlet-class>
    </servlet-->

    <servlet>
        <servlet-name>resultMatrixServlet</servlet-name>
        <servlet-class>servlets.ResultMatrixServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <!--servlet-mapping>
        <servlet-name>matrixServlet</servlet-name>
        <url-pattern>/matrix.json</url-pattern>
    </servlet-mapping-->

    <servlet-mapping>
        <servlet-name>resultMatrixServlet</servlet-name>
        <url-pattern>/result-matrix.json</url-pattern>
    </servlet-mapping>

</web-app>